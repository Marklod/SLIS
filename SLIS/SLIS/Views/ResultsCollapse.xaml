                FontSize="Medium"  
                HorizontalOptions="Start"
                VerticalOptions="Center"
                TextColor="Black" />

                <BoxView BackgroundColor="White"  WidthRequest="0.5" HorizontalOptions="End" VerticalOptions="FillAndExpand"  Grid.Column="0" />

